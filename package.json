{
	"name": "stabelo-elevator",
	"version": "1.0.0",
	"description": "TypeScript backend microservice for elevator controller",
	"main": "dist/index.js",
	"bin": {
		"stabelo-elevator": "./dist/index.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "ts-node-dev --transpile-only src/index.ts",
		"dev:respawn": "ts-node-dev --respawn --transpile-only src/index.ts",
		"start": "node dist/index.js",
		"lint": "eslint src --ext .ts",
		"type-check": "tsc --noEmit",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": [
		"typescript",
		"microservice",
		"express"
	],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"commander": "^11.1.0",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2"
	},
	"devDependencies": {
		"@types/commander": "^2.12.2",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^30.0.0",
		"@types/node": "^20.10.5",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"eslint": "^8.56.0",
		"jest": "^30.2.0",
		"ts-jest": "^29.4.6",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.3.3"
	}
}